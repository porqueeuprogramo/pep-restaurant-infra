resource "aws_security_group" "eks_cluster_sg_pep" {
  name        = "eks-cluster-sg-pep"
  description = "EKS Cluster security group"
  vpc_id      = aws_vpc.vpc_pep.id

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 1025
    to_port     = 65535
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}